<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tk.mayankrathore.helpwali_v10.LoginActivity"
    android:background="@drawable/greenblurry"
    android:padding="20dp">


    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Signup to HelpWali"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/heading"
        android:text="Liberating the esteemed, connnecting the need."
        android:textColor="#ffffff"
        android:textSize="10dp"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subheading"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/et_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:hint="Username"
            android:background="#471d740c"
            android:textColorHint="#ffffff"/>
        <EditText
            android:id="@+id/et_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Choose Password"
            android:inputType="textPassword"
            android:background="#471d740c"
            android:textColorHint="#ffffff"/>
        <EditText
            android:id="@+id/et_password2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="#471d740c"
            android:textColorHint="#ffffff"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Name"
            android:inputType="textPassword"
            android:background="#471d740c"
            android:textColorHint="#ffffff"/>
        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Gender"
            android:inputType="textPassword"
            android:background="#471d740c"
            android:textColorHint="#ffffff"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#0e5802"
            android:text="Continue"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:text="Already have an account?"/>
    <TextView
        android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout"
        android:layout_toRightOf="@id/tag1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:clickable="true"
        android:onClick="toLogin"/>

</RelativeLayout>
